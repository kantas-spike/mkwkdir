{
  "name": "make-wkdir",
  "displayName": "make-wkdir",
  "description": "Extension for creating a working directory",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "make-wkdir.makeWkDirForProducts",
        "category": "workDir",
        "title": "for products"
      },
      {
        "command": "make-wkdir.makeWkDirForTools",
        "category": "workDir",
        "title": "for tools"
      },
      {
        "command": "make-wkdir.makeWkDirForLearning",
        "category": "workDir",
        "title": "for Learning"
      },
      {
        "command": "make-wkdir.makeWkDirForSpike",
        "category": "workDir",
        "title": "for spike"
      }
    ],
    "configuration": {
      "title": "make work directory",
      "properties": {
        "make-wkdir.productsPath": {
          "type": "string",
          "default": "/Users/kanta/hacking/products",
          "markdownDescription": "Path of work dir for products"
        },
        "make-wkdir.toolsPath": {
          "type": "string",
          "default": "/Users/kanta/hacking/tools",
          "markdownDescription": "Path of work dir for tools"
        },
        "make-wkdir.learningPath": {
          "type": "string",
          "default": "/Users/kanta/hacking/learning",
          "markdownDescription": "Path of work dir for learning"
        },
        "make-wkdir.spikePath": {
          "type": "string",
          "default": "/Users/kanta/hacking/spike",
          "markdownDescription": "Path of work dir for spike"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@vscode/test-electron": "^2.3.4",
    "chai": "^4.3.8",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  }
}
